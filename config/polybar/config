[colors]
background = #222D32
background-alt = #444
foreground = #D8DEE9
foreground-alt = #555
primary = #24D1E7
secondary = #4C566A
alert = #24D1E7

bar-blue = #00D7D7
bar-purple = #975CFF
bar-red = #EF3895


[bar/main]
width = 100%
height = 30
radius = 0.0
fixed-center = true
dpi = 210
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #01AB84

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Consolas:size=7;2
font-1 = Hack Nerd Font:style=Regular:size=7;2
font-2 = Hack Nerd Font:style=Regular:size=20;2

modules-left = powermenu ewmh
modules-center = xwindow
modules-right = wireless-network date

tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/ewmh]
type = internal/xworkspaces

pin-workspaces = true
enable-click = true
enable-scroll = false

label-active = " %name% "
label-active-foreground = ${colors.background}
label-active-background = ${colors.primary}


[module/wireless-network]
type = internal/network
interface = enp0s3
interval = 3.0

label-connected = "%local_ip% | down:%downspeed% | up:%upspeed% |  "
label-connected-foreground = ${colors.primary}


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/date]
type = internal/date

interval = 1.0
date = %d-%m-%Y
time = %H:%M
label = %date% %time%


[module/powermenu]
type = custom/menu
label-active-font = 1
format-spacing = 1
label-open = "x "
label-open-foreground = ${colors.primary}
label-close = "x "
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.secondary}

menu-0-0 = reboot
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec = reboot
menu-0-1 = power off
menu-0-1-foreground = ${colors.alert}
menu-0-1-exec = poweroff


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5
